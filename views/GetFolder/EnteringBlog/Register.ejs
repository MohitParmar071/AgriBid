<!--boiler plats-->
<% layout("../layoutes/EnteringBoilerplats") %>
<link rel="stylesheet" href="/css/Register.css">

<body>
  <div class="main-content">
    <div class="form-container">
      <h2>Register</h2>
      <!-- enctype added -->
      <form method="post" action="/register" enctype="multipart/form-data">
        <div class="form-row">
          <div class="form-group">
            <label>Name</label>
            <input type="text" name="con[username]" required>
          </div>
          <div class="form-group">
            <label>Mobile Number</label>
            <input type="text" name="con[mo_num]" required>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label>Email</label>
            <input type="email" name="con[email]" required>
            <% if (typeof error !== "undefined" && error) { %>
              <small class="error-message"><%= error %></small>
            <% } %>
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" name="con[password]" required>
          </div>
        </div>

        <div class="form-group">
          <label>Address</label>
          <input type="text" name="con[address]" required>
        </div>

        <div class="form-group">
          <label>Profile Pic</label>
          <!-- fixed name: must be "img", not con[img] -->
          <input type="file" name="img" accept="image/*" required>
        </div>

        <div class="form-actions">
          <button type="submit">Register</button>
        </div>
      </form>
    </div>
  </div>
</body>